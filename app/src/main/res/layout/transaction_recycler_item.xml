<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_margin">

    <TextView
        android:id="@+id/amount_transferred"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="+1,000,000,000,000 XLM"
        tools:textColor="@color/transfer_in" />

    <TextView
        android:id="@+id/operation_type_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/operation_type_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/amount_transferred" />

    <TextView
        android:id="@+id/operation_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_large"
        android:ellipsize="end"
        android:gravity="end"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/operation_type_label"
        app:layout_constraintTop_toBottomOf="@id/amount_transferred"
        tools:text="@string/operation_create_passive_offer" />

    <LinearLayout
        android:id="@+id/address_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/operation_type_label">

        <TextView
            android:id="@+id/sender_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sender_label" />

        <TextView
            android:id="@+id/receiver_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/receiver_label"
            tools:visibility="gone" />

        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_large"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="AREALLYREALLYREALLYREALLYREALLYLONGSEED" />
    </LinearLayout>

    <TextView
        android:id="@+id/memo_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/memo_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/address_container" />

    <TextView
        android:id="@+id/memo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_large"
        android:gravity="end"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/memo_label"
        app:layout_constraintTop_toBottomOf="@+id/address_container"
        tools:text="Twenty Eight Characters Long" />


</android.support.constraint.ConstraintLayout>